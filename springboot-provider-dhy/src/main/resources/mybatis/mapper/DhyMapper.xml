<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.jk.mapper.DhyMapper" >

  <select id="queryRole" resultType="com.jk.model.Role">

    select * from l_role <include refid="cha"></include>

  </select>

  <select id="queryZhanghao" resultType="com.jk.model.Zhanghao">

    select * from t_zhanghao <include refid="cha2"></include>

  </select>



  <sql id="cha">

    <where>
    <if test="name!= null and name !=''">

        and name = #{name}
      </if>

    </where>

  </sql>

  <sql id="cha2">

    <where>
      <if test="name!= null and name !=''">

        and (name like ("%"#{name}"%") or email like ("%"#{name}"%"))
      </if>

    </where>

  </sql>

</mapper>